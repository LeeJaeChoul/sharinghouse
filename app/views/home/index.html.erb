<img class="img-responsive" src='<%= asset_path "header-bg.jpg" %>' alt="" style="width:100%;">

<section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">최신 방 정보</h2>
                    <h3 class="section-subheading text-muted">가장 최근에 올라온 방 9개를 보여드립니다.</h3>
                </div>
            </div>
            <div class="row">
                <% @room.each do |room| %>
                <div class="col-md-4 col-sm-6 portfolio-item">
                  <a href="/rooms/<%= room.id %>" class="portfolio-link" data-toggle="modal">
                      <div class="portfolio-hover">
                          <div class="portfolio-hover-content">
                              <i class="fa fa-search-plus fa-3x"></i>
                          </div>
                      </div>
                      <img class="img-responsive" src="<%= room.image.url %>" alt="" style="width:360px; height:200px;">
                  </a>
                  <div class="portfolio-caption">
                      <h4><%= room.title %></h4>
                      <p class="text-muted">보증금: <%= room.deposit %>만원, 월세: <%= room.rent_money %>만원</p>
                  </div>
                </div>
                <% end %>
            </div>
            </div>
        </div>
    </section>
